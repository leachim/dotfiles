# settings
set selection-clipboard   clipboard
#set selection-clipboard primary

# strip file path from the title
set window-title-basename false
set statusbar-home-tilde  true
set statusbar-basename false
set statusbar-v-padding 6
set statusbar-h-padding 4

# there is no default icon for zathura
#set window-icon /usr/share/icons/Moka/32x32/apps/xpdf.png

set incremental-search true
# default; on abort (<esc>) clear higlight (like :nohl)
set abort-clear-search true
#set adjust-open		  best-fit
